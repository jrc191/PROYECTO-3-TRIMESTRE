<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="382.0" prefWidth="468.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.RegistroController">
    <VBox fx:id="leftPane" alignment="CENTER" layoutX="25.0" prefHeight="382.0" prefWidth="500.0" spacing="15" style="-fx-background-color: transparent;">
      <Label prefHeight="37.0" prefWidth="209.0" style="-fx-font-weight: bold; -fx-text-fill: #FFC107; -fx-effect: dropshadow(gaussian, black, 3, 0.5, 0, 0);" text="REGISTRO DE USUARIOS">
         <font>
            <Font size="18.0" />
         </font>
         <VBox.margin>
            <Insets top="15.0" />
         </VBox.margin>
      </Label>

        <VBox alignment="CENTER_LEFT" prefHeight="246.0" prefWidth="534.0" spacing="10" style="-fx-padding: 0 30 0 30;">
            <Label style="-fx-font-weight: bold; -fx-text-fill: #FFC107; -fx-effect: dropshadow(gaussian, black, 3, 0.5, 0, 0);" text="DNI (*)" />
            <TextField fx:id="dniField" promptText="Introduce el DNI..." style="-fx-pref-width: 250px; -fx-background-color: #F5F5F5;" />

            <Label style="-fx-font-weight: bold; -fx-text-fill: #FFC107; -fx-effect: dropshadow(gaussian, black, 3, 0.5, 0, 0);" text="Nombre Completo (*)" />
            <TextField fx:id="nombreField" promptText="Introduce el nombre y apellidos..." style="-fx-pref-width: 250px; -fx-background-color: #F5F5F5;" />

            <Label style="-fx-font-weight: bold; -fx-text-fill: #FFC107; -fx-effect: dropshadow(gaussian, black, 3, 0.5, 0, 0);" text="Email (*)" />
            <TextField fx:id="emailField" promptText="Introduce el correo electrónico" style="-fx-pref-width: 250px; -fx-background-color: #F5F5F5;" />

            <Label style="-fx-font-weight: bold; -fx-text-fill: #FFC107; -fx-effect: dropshadow(gaussian, black, 3, 0.5, 0, 0);" text="Contraseña (*)" />
            <PasswordField fx:id="passwordField" promptText="Introduce la contraseña..." style="-fx-pref-width: 250px; -fx-background-color: #F5F5F5;" />
        </VBox>

        <Button onAction="#handleRegistro" style="-fx-background-color: #FFD700; -fx-text-fill: #0F1C3F; -fx-font-size: 16px; -fx-font-weight: bold; -fx-pref-width: 200px; -fx-pref-height: 40px; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 5, 0, 0, 1);" text="Crear Cuenta">
            <cursor>
                <Cursor fx:constant="HAND" />
            </cursor>
        </Button>

        <Label fx:id="messageLabelRegistro" style="-fx-text-fill: #FF6B6B;" text="" />
    </VBox>
</AnchorPane>
