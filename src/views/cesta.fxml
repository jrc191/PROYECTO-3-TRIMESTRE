<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="650" prefWidth="800" style="-fx-background-color: linear-gradient(to bottom, #0F1C3F, #1A2A5A);" xmlns="http://javafx.com/javafx/21.0.6" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.CestaController">
    <VBox prefHeight="650.0" prefWidth="730.0" spacing="20">
        <HBox alignment="CENTER_LEFT" spacing="20">
            <Label prefHeight="40.0" prefWidth="241.0" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: white;" styleClass="align" text="Cesta" textAlignment="CENTER" textFill="WHITE">
                <HBox.margin>
                    <Insets left="20.0" top="10.0" />
                </HBox.margin>
            </Label>
            <Region HBox.hgrow="ALWAYS" />
            <HBox alignment="CENTER_RIGHT" spacing="10">
                <Label fx:id="usuarioLabel" style="-fx-font-weight: bold; -fx-text-fill: white;">
                    <HBox.margin>
                        <Insets top="10.0" />
                    </HBox.margin></Label>
                <Button onAction="#cerrarSesion" style="-fx-background-color: #ff4444; -fx-text-fill: white; -fx-font-weight: bold;" text="Cerrar sesión">
                    <cursor>
                        <Cursor fx:constant="HAND" />
                    </cursor>
                    <HBox.margin>
                        <Insets right="10.0" top="10.0" />
                    </HBox.margin>
                </Button>
            </HBox>
        </HBox>
        <HBox alignment="CENTER_LEFT" prefHeight="56.0" prefWidth="762.0" spacing="10" style="-fx-background-color: #1c2242; -fx-padding: 15; -fx-background-radius: 10;">
            <VBox.margin>
                <Insets left="15.0" right="15.0" />
            </VBox.margin>
            <Label prefHeight="18.0" prefWidth="116.0" style="-fx-text-fill: white;" text="Filtrar por fecha:" />
            <DatePicker fx:id="filtroFechaField" accessibleText="FILTRO FECHAS" prefHeight="26.0" prefWidth="134.0" />
            <Button onAction="#filtrarPorFecha" prefHeight="26.0" prefWidth="73.0" style="-fx-background-color: #4e3a74; -fx-text-fill: white; -fx-font-weight: bold;" text="Filtrar">
                <cursor>
                    <Cursor fx:constant="HAND" />
                </cursor>
            </Button>
            <Button onAction="#mostrarTodas" prefHeight="26.0" prefWidth="118.0" style="-fx-background-color: #4e3a74; -fx-text-fill: white; -fx-font-weight: bold;" text="Mostrar todas">
                <cursor>
                    <Cursor fx:constant="HAND" />
                </cursor>
            </Button>
            <Label prefHeight="18.0" prefWidth="59.0" style="-fx-text-fill: white;" text="Buscar:">
                <HBox.margin>
                    <Insets left="20.0" />
                </HBox.margin>
            </Label>
            <TextField fx:id="filtroNombreField" prefHeight="26.0" prefWidth="107.0" promptText="Nombre..." />
            <Button onAction="#filtrarPorNombre" prefHeight="26.0" prefWidth="81.0" style="-fx-background-color: #4e3a74; -fx-text-fill: white; -fx-font-weight: bold;" text="Buscar">
                <cursor>
                    <Cursor fx:constant="HAND" />
                </cursor>
            </Button>
        </HBox>

        <!-- Contenedor principal con scroll vertical -->
        <StackPane prefHeight="400" prefWidth="710" style="-fx-background-color: #1c2242;">
            <ScrollPane fx:id="scrollEntradas" fitToWidth="true" hbarPolicy="NEVER" pannable="true" style="-fx-background: #1c2242; -fx-background-color: #1c2242;">
                <VBox fx:id="contenedorEntradas" alignment="TOP_CENTER" spacing="15" style="-fx-padding: 15; -fx-background-color: #1c2242;" />
            </ScrollPane>

            <!-- Flechas de scroll vertical -->
            <Label fx:id="arribaBtn" prefHeight="18.0" prefWidth="18.0" style="-fx-font-size: 36px; -fx-text-fill: white; -fx-opacity: 0.7;" text="↑" StackPane.alignment="TOP_CENTER">
                <cursor>
                    <Cursor fx:constant="HAND" />
                </cursor>
            </Label>
            <Label fx:id="abajoBtn" prefHeight="18.0" style="-fx-font-size: 36px; -fx-text-fill: white; -fx-opacity: 0.7;" text="↓" StackPane.alignment="BOTTOM_CENTER">
                <cursor>
                    <Cursor fx:constant="HAND" />
                </cursor>
            </Label>
        </StackPane>

        <!-- Total y botón de compra -->
        <HBox alignment="CENTER_RIGHT" style="-fx-background-color: #1c2242; -fx-padding: 15; -fx-background-radius: 10;">
            <VBox.margin>
                <Insets bottom="15.0" left="15.0" right="15.0" />
            </VBox.margin>
            <Label fx:id="totalLabel" style="-fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 16px;" text="Total: 0.00 €">
                <HBox.margin>
                    <Insets right="20.0" />
                </HBox.margin>
            </Label>
            <Button style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold;" text="Confirmar compra">
                <cursor>
                    <Cursor fx:constant="HAND" />
                </cursor>
            </Button>
        </HBox>

        <Button onAction="#volverCartelera" style="-fx-background-color: #1c2242; -fx-text-fill: white; -fx-font-weight: bold;" text="&lt;- Volver">
            <cursor>
                <Cursor fx:constant="HAND" />
            </cursor>
            <VBox.margin>
                <Insets bottom="15.0" left="15.0" />
            </VBox.margin>
        </Button>
    </VBox>
</AnchorPane>
