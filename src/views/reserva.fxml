<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.*?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.ReservasController" spacing="10">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>
    
     <Label fx:id="usuarioLabel" style="-fx-font-weight: bold;"/>
    
    <Label fx:id="tituloEspectaculo" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
    <Label fx:id="fechaEspectaculo"/>
    
    <HBox spacing="20">
        <Label fx:id="precioBaseLabel"/>
        <Label fx:id="precioVipLabel"/>
    </HBox>
    
    <Separator/>
    
    <Label text="Seleccione el tipo de entrada:"/>
    <ComboBox fx:id="tipoEntradaComboBox" prefWidth="150"/>
    
    <Label text="Seleccione sus butacas:"/>
    <ScrollPane fitToWidth="true">
        <GridPane fx:id="butacasGrid" hgap="5" vgap="5"/>
    </ScrollPane>
    
    <Label text="Leyenda:"/>
    <HBox spacing="10">
        <Label text="Disponible" style="-fx-background-color: #cccccc; -fx-padding: 5;"/>
        <Label text="VIP" style="-fx-background-color: #ffcc00; -fx-padding: 5;"/>
        <Label text="Seleccionada" style="-fx-background-color: #00cc00; -fx-text-fill: white; -fx-padding: 5;"/>
        <Label text="Ocupada" style="-fx-background-color: #ff0000; -fx-text-fill: white; -fx-padding: 5;"/>
    </HBox>
    
    <Label fx:id="totalLabel" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
    
    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="Cancelar" onAction="#handleCancelar"/>
        <Button fx:id="confirmarReservaButton" text="Confirmar Reserva" onAction="#handleConfirmarReserva"/>
    </HBox>
</VBox>