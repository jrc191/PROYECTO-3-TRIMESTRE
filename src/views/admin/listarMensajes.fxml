<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.admin.ListarMensajesController">
    <VBox spacing="10" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <HBox prefHeight="42.0" prefWidth="700.0" spacing="10" style="-fx-padding: 10;">

            <Button fx:id="guardarBtn" mnemonicParsing="false" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-cursor: hand;" text="Guardar Cambios">
                <HBox.margin>
                    <Insets left="10.0" top="6.0" />
                </HBox.margin>
            </Button>

            <Button fx:id="cancelarBtn" mnemonicParsing="false" style="-fx-background-color: #f44336; -fx-text-fill: white; -fx-cursor: hand;" text="Cancelar Cambios">
                <HBox.margin>
                    <Insets left="5.0" top="6.0" />
                </HBox.margin>
            </Button>
         <Button fx:id="eliminarBtn" layoutX="677.0" layoutY="26.0" mnemonicParsing="false" prefHeight="24.0" prefWidth="21.0" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-cursor: hand;">
            <HBox.margin>
               <Insets left="390.0" top="6.0" />
            </HBox.margin>
         </Button>
        </HBox>

        <ScrollPane fx:id="scrollMensajes" fitToHeight="true" hbarPolicy="AS_NEEDED" style="-fx-background: white; -fx-border-color: #e0e0e0; -fx-border-width: 1; -fx-border-radius: 5;" vbarPolicy="AS_NEEDED">
            <content>
                <TableView fx:id="tablaMensajes" editable="true" prefWidth="775" prefHeight="600">
                    <columns>
                        <TableColumn fx:id="colSeleccionar" maxWidth="80" minWidth="40" prefWidth="50" style="-fx-background-color: transparent;" text="X" />
                        <TableColumn fx:id="colId" maxWidth="80" minWidth="40" prefWidth="50" style="-fx-background-color: transparent;" text="ID" />
                        <TableColumn fx:id="colUsuario" maxWidth="200" minWidth="80" prefWidth="120" style="-fx-background-color: transparent;" text="Usuario" />
                        <TableColumn fx:id="colReserva" maxWidth="150" minWidth="80" prefWidth="100" style="-fx-background-color: transparent;" text="Reserva" />
                        <TableColumn fx:id="colFecha" maxWidth="180" minWidth="100" prefWidth="120" style="-fx-background-color: transparent;" text="Fecha" />
                        <TableColumn fx:id="colTipo" maxWidth="150" minWidth="80" prefWidth="100" style="-fx-background-color: transparent;" text="Tipo" />
                        <TableColumn fx:id="colEstado" maxWidth="150" minWidth="80" prefWidth="100" style="-fx-background-color: transparent;" text="Estado" />
                        <TableColumn fx:id="colAcciones" maxWidth="120" minWidth="60" prefWidth="80" style="-fx-background-color: transparent;" text="Acciones" />
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>
            </content>
        </ScrollPane>
    </VBox>
</AnchorPane>
