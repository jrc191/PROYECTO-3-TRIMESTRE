<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.admin.ListarMensajesController">
    <VBox spacing="10" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <HBox prefHeight="42.0" prefWidth="700.0" spacing="10" style="-fx-padding: 10;">
            <ImageView fx:id="actualizarBtn" fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true" style="-fx-cursor: hand;">
                <image>
                    <Image url="@../../resources/images/editar.png" />
                </image>
                <HBox.margin>
                    <Insets top="3.0" />
                </HBox.margin>
            </ImageView>
            <ImageView fx:id="eliminarBtn" fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true" style="-fx-cursor: hand;">
                <image>
                    <Image url="@../../resources/images/eliminar.png" />
                </image>
                <HBox.margin>
                    <Insets top="6.0" />
                </HBox.margin>
            </ImageView>
            <Button fx:id="guardarBtn" mnemonicParsing="false" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-cursor: hand;" text="Guardar" visible="false">
                <HBox.margin>
                    <Insets left="10.0" top="6.0" />
                </HBox.margin>
            </Button>
            <Button fx:id="cancelarBtn" mnemonicParsing="false" style="-fx-background-color: #f44336; -fx-text-fill: white; -fx-cursor: hand;" text="Cancelar" visible="false">
                <HBox.margin>
                    <Insets left="5.0" top="6.0" />
                </HBox.margin>
            </Button>
        </HBox>
        <ScrollPane fx:id="scrollMensajes" fitToHeight="true" fitToWidth="true" hbarPolicy="NEVER" prefHeight="500.0" prefWidth="700.0" style="-fx-background: white; -fx-border-color: #e0e0e0; -fx-border-width: 1; -fx-border-radius: 5;" vbarPolicy="AS_NEEDED">
            <content>
                <VBox fx:id="scrollVBox" prefHeight="25.0" prefWidth="680.0" spacing="0" style="-fx-background-color: white;">
                    <!-- Aquí se añaden los mensajes dinámicamente -->
                </VBox>
            </content>
        </ScrollPane>
    </VBox>
</AnchorPane>
