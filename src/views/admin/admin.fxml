<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="650" prefWidth="900" style="-fx-background-color: linear-gradient(to bottom, #0F1C3F, #1A2A5A);" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.admin.AdminController">
    <VBox prefHeight="650.0" prefWidth="800.0" spacing="20">
        <!-- Barra superior -->
        <HBox alignment="CENTER_LEFT" prefHeight="50.0" prefWidth="706.0" spacing="20" style="-fx-background-color: #1c2242; -fx-border-radius: 10; -fx-border-insets: 10; -fx-background-radius: 10;">
            <Label prefHeight="33.0" prefWidth="400.0" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: white;" text="Panel de Administración">
                <HBox.margin>
                    <Insets bottom="5.0" left="20.0" top="5.0" />
                </HBox.margin>
            <font>
               <Font size="12.0" />
            </font>
            </Label>
            <Region HBox.hgrow="ALWAYS">
                <HBox.margin>
                    <Insets />
                </HBox.margin></Region>
            <HBox alignment="CENTER_RIGHT" spacing="10">
                <Label fx:id="usuarioLabel" style="-fx-font-weight: bold; -fx-text-fill: white;">
                    <HBox.margin>
                        <Insets />
                    </HBox.margin>
               <font>
                  <Font size="12.0" />
               </font>
                </Label>
                <Button onAction="#cerrarSesion" prefHeight="13.0" prefWidth="33.0" style="-fx-background-color: #ff4444; -fx-text-fill: white; -fx-font-weight: bold;">
                    <cursor>
                        <Cursor fx:constant="HAND" />
                    </cursor>
                    <HBox.margin>
                        <Insets right="20.0" />
                    </HBox.margin>
               <graphic>
                  <ImageView fitHeight="15.0" fitWidth="17.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../../resources/images/cerrar-sesion.png" />
                     </image>
                  </ImageView>
               </graphic>
                </Button>
            </HBox>
            <VBox.margin>
                <Insets bottom="15.0" left="15.0" right="75.0" top="15.0" />
            </VBox.margin>
        </HBox>

        <!-- Contenido principal -->
        <HBox prefHeight="550.0" prefWidth="800.0" spacing="20">
            <!-- Menú lateral -->
            <VBox fx:id="menuLateral" prefWidth="200.0" spacing="5" style="-fx-background-color: #1c2242; -fx-background-radius: 10;">
                <padding>
                    <Insets bottom="25.0" left="10.0" right="10.0" top="10.0" />
                </padding>

                <!-- Usuarios Accordion -->
                <VBox fx:id="usuariosAccordion" spacing="0">
                    <Button fx:id="usuariosBtn" onAction="#toggleOpcionesUsuarios" prefHeight="26.0" prefWidth="150.0" style="-fx-background-color: #4e3a74; -fx-text-fill: white; -fx-font-weight: bold; -fx-alignment: CENTER_LEFT;" text=" ▶  Usuarios" textAlignment="CENTER">
                        <graphic>
                            <ImageView fitHeight="16.0" fitWidth="16.0" preserveRatio="true">
                                <image>
                                    <Image url="@../../resources/images/user-48.png" />
                                </image>
                            </ImageView>
                        </graphic>
                  <VBox.margin>
                     <Insets top="10.0" />
                  </VBox.margin>
                  <cursor>
                     <Cursor fx:constant="HAND" />
                  </cursor>
                  <font>
                     <Font size="12.0" />
                  </font>
                    </Button>
                    <VBox fx:id="usuariosOpciones" spacing="5" style="-fx-padding: 5 0 0 15;" visible="false">
                        <Button fx:id="agregarUsuarioBtn" onAction="#cargarAgregarUsuario" prefWidth="95.0" style="-fx-background-color: #3a427c; -fx-text-fill: white; -fx-font-weight: bold; -fx-alignment: CENTER_LEFT;" text="Agregar" />
                        <Button fx:id="eliminarUsuarioBtn" onAction="#cargarEliminarUsuario" prefWidth="95.0" style="-fx-background-color: #3a427c; -fx-text-fill: white; -fx-font-weight: bold; -fx-alignment: CENTER_LEFT;" text="Eliminar" />
                        <Button fx:id="modificarUsuarioBtn" onAction="#cargarModificarUsuario" prefWidth="95.0" style="-fx-background-color: #3a427c; -fx-text-fill: white; -fx-font-weight: bold; -fx-alignment: CENTER_LEFT;" text="Modificar" />
                        <Button fx:id="listarUsuariosBtn" onAction="#cargarListarUsuarios" prefWidth="95.0" style="-fx-background-color: #3a427c; -fx-text-fill: white; -fx-font-weight: bold; -fx-alignment: CENTER_LEFT;" text="Listar" />
                    </VBox>
                </VBox>

                <!-- Reservas Accordion -->
                <VBox fx:id="reservasAccordion" spacing="0">
                    <Button fx:id="reservasBtn" onAction="#toggleOpcionesReservas" prefHeight="26.0" prefWidth="150.0" style="-fx-background-color: #4e3a74; -fx-text-fill: white; -fx-font-weight: bold; -fx-alignment: CENTER_LEFT;" text="▶  Reservas">
                        <graphic>
                            <ImageView fitHeight="16.0" fitWidth="16.0" preserveRatio="true">
                                <image>
                                    <Image url="@../../resources/images/default-show.png" />
                                </image>
                            </ImageView>
                        </graphic>
                  <VBox.margin>
                     <Insets top="25.0" />
                  </VBox.margin>
                  <cursor>
                     <Cursor fx:constant="HAND" />
                  </cursor>
                  <font>
                     <Font size="12.0" />
                  </font>
                    </Button>
                    <VBox fx:id="reservasOpciones" spacing="5" style="-fx-padding: 5 0 0 15;" visible="false">
                        <Button fx:id="verReservasBtn" onAction="#cargarVerReservas" prefWidth="95.0" style="-fx-background-color: #3a427c; -fx-text-fill: white; -fx-font-weight: bold; -fx-alignment: CENTER_LEFT;" text="Ver" />
                        <Button fx:id="cancelarReservaBtn" onAction="#cargarCancelarReserva" prefWidth="95.0" style="-fx-background-color: #3a427c; -fx-text-fill: white; -fx-font-weight: bold; -fx-alignment: CENTER_LEFT;" text="Cancelar" />
                        <Button fx:id="estadisticasBtn" onAction="#cargarEstadisticas" prefWidth="95.0" style="-fx-background-color: #3a427c; -fx-text-fill: white; -fx-font-weight: bold; -fx-alignment: CENTER_LEFT;" text="Estadísticas" />
                    </VBox>
                </VBox>

                <!-- Películas Accordion -->
                <VBox fx:id="peliculasAccordion" spacing="0">
                    <Button fx:id="peliculasBtn" onAction="#toggleOpcionesPeliculas" prefHeight="26.0" prefWidth="150.0" style="-fx-background-color: #4e3a74; -fx-text-fill: white; -fx-font-weight: bold; -fx-alignment: CENTER_LEFT;" text=" ▶  Películas">
                        <graphic>
                            <ImageView fitHeight="16.0" fitWidth="16.0" preserveRatio="true">
                                <image>
                                    <Image url="@../../resources/images/default-show.png" />
                                </image>
                            </ImageView>
                        </graphic>
                  <VBox.margin>
                     <Insets top="25.0" />
                  </VBox.margin>
                  <cursor>
                     <Cursor fx:constant="HAND" />
                  </cursor>
                  <font>
                     <Font size="12.0" />
                  </font>
                    </Button>
                    <VBox fx:id="peliculasOpciones" spacing="5" style="-fx-padding: 5 0 0 15;" visible="false">
                        <Button fx:id="agregarPeliculaBtn" onAction="#cargarAgregarPelicula" prefHeight="26.0" prefWidth="95.0" style="-fx-background-color: #3a427c; -fx-text-fill: white; -fx-font-weight: bold; -fx-alignment: CENTER_LEFT;" text="Agregar" />
                        <Button fx:id="eliminarPeliculaBtn" onAction="#cargarEliminarPelicula" prefWidth="95.0" style="-fx-background-color: #3a427c; -fx-text-fill: white; -fx-font-weight: bold; -fx-alignment: CENTER_LEFT;" text="Eliminar" />
                        <Button fx:id="modificarPeliculaBtn" onAction="#cargarModificarPelicula" prefWidth="95.0" style="-fx-background-color: #3a427c; -fx-text-fill: white; -fx-font-weight: bold; -fx-alignment: CENTER_LEFT;" text="Modificar" />
                        <Button fx:id="listarPeliculasBtn" onAction="#cargarListarPeliculas" prefWidth="95.0" style="-fx-background-color: #3a427c; -fx-text-fill: white; -fx-font-weight: bold; -fx-alignment: CENTER_LEFT;" text="Listar" />
                    </VBox>
                </VBox>
            <HBox.margin>
               <Insets />
            </HBox.margin>
            </VBox>

            <!-- Área de contenido -->
            <StackPane fx:id="contenidoArea" prefHeight="550.0" prefWidth="600.0" style="-fx-background-color: #1c2242; -fx-background-radius: 10;">
                <padding>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                </padding>
                <Label style="-fx-text-fill: white; -fx-font-size: 16px;" text="Seleccione una opción del menú">
               <font>
                  <Font size="12.0" />
               </font></Label>
            </StackPane>
         <VBox.margin>
            <Insets bottom="25.0" left="15.0" right="75.0" />
         </VBox.margin>
        </HBox>
    </VBox>
</AnchorPane>
