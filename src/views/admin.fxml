<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="650" prefWidth="800" style="-fx-background-color: linear-gradient(to bottom, #0F1C3F, #1A2A5A);" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.AdminController">
    <VBox prefHeight="650.0" prefWidth="730.0" spacing="20">
        <HBox alignment="CENTER_LEFT" spacing="20">
            <Label prefHeight="40.0" prefWidth="241.0" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: white;" styleClass="align" text="Panel de Control" textAlignment="CENTER" textFill="WHITE">
                <HBox.margin>
                    <Insets left="20.0" top="10.0" />
                </HBox.margin>
            </Label>
            <Region HBox.hgrow="ALWAYS" />
            <HBox alignment="CENTER_RIGHT" spacing="10">
                <Label fx:id="usuarioLabel" style="-fx-font-weight: bold; -fx-text-fill: white;">
               <HBox.margin>
                  <Insets top="10.0" />
               </HBox.margin></Label>
                <Button onAction="#cerrarSesion" style="-fx-background-color: #ff4444; -fx-text-fill: white; -fx-font-weight: bold;" text="Cerrar sesión">
                    <cursor>
                        <Cursor fx:constant="HAND" />
                    </cursor>
                    <HBox.margin>
                        <Insets right="10.0" top="10.0" />
                    </HBox.margin>
                </Button>
            </HBox>
        </HBox>
      <HBox alignment="CENTER_LEFT" layoutX="10.0" layoutY="10.0" spacing="20">
         <children>
            <TabPane prefHeight="534.0" prefWidth="758.0" style="-fx-background-color: #1c2242; -fx-background: #1c2242; -fx-text-fill: white; -fx-background-radius: 10;" tabClosingPolicy="UNAVAILABLE">
               <tabs>
                  <Tab fx:id="usuariosTab" style="-fx-text-fill: white;" text="Usuarios">
                     <content>
                        <StackPane prefHeight="391.0" prefWidth="700.0" style="-fx-background-color: #1c2242; -fx-background: #1c2242; -fx-background-radius: 10;">
                           <VBox.margin>
                              <Insets left="15.0" right="15.0" />
                           </VBox.margin>
                           <cursor>
                              <Cursor fx:constant="CLOSED_HAND" />
                           </cursor>
                           <children>
                              <ScrollPane fx:id="scrollUsuarios" fitToWidth="true" hbarPolicy="NEVER" pannable="true" prefHeight="362.0" prefWidth="685.0" style="-fx-background: #1c2242; -fx-background-color: #1c2242; -fx-background-radius: 10;">
                                 <cursor>
                                    <Cursor fx:constant="CLOSED_HAND" />
                                 </cursor>
                                 <StackPane.margin>
                                    <Insets />
                                 </StackPane.margin>
                                 <content>
                                    <VBox fx:id="contenedorUsuarios" alignment="TOP_CENTER" spacing="15" style="-fx-padding: 15; -fx-background-color: #1c2242; -fx-background-radius: 10;" />
                                 </content>
                              </ScrollPane>
                              <Label fx:id="arribaBtn" prefHeight="18.0" prefWidth="18.0" style="-fx-font-size: 36px; -fx-text-fill: white; -fx-opacity: 0.7;" text="↑" visible="false" StackPane.alignment="TOP_CENTER">
                                 <cursor>
                                    <Cursor fx:constant="CLOSED_HAND" />
                                 </cursor>
                              </Label>
                              <Label fx:id="abajoBtn" prefHeight="18.0" style="-fx-font-size: 36px; -fx-text-fill: white; -fx-opacity: 0.7;" text="↓" visible="false" StackPane.alignment="BOTTOM_CENTER">
                                 <cursor>
                                    <Cursor fx:constant="CLOSED_HAND" />
                                 </cursor>
                              </Label>
                           </children>
                        </StackPane>
                     </content>
                  </Tab>
                  <Tab fx:id="reservasTab" style="-fx-text-fill: white;" text="Reservas">
                     <content>
                        <StackPane prefHeight="547" prefWidth="679" style="-fx-background-color: #1c2242;">
                           <children>
                              <ScrollPane fitToHeight="true" fitToWidth="false" hbarPolicy="NEVER" pannable="true" style="-fx-background-color: #1c2242;" vbarPolicy="NEVER">
                                 <opaqueInsets>
                                    <Insets right="2.0" />
                                 </opaqueInsets>
                                 <content>
                                    <HBox alignment="CENTER_LEFT" minWidth="1000" spacing="20" style="-fx-padding: 20; -fx-background-color: #1c2242;">
                                       <cursor>
                                          <Cursor fx:constant="CLOSED_HAND" />
                                       </cursor>
                                    </HBox>
                                 </content>
                              </ScrollPane>
                           </children>
                        </StackPane>
                     </content>
                  </Tab>
               </tabs>
            </TabPane>
         </children>
         <VBox.margin>
            <Insets left="15.0" right="15.0" />
         </VBox.margin>
      </HBox>
    </VBox>
</AnchorPane>
